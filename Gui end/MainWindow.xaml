<Window x:Class="Gui_end.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui_end"
        mc:Ignorable="d"
        Background="LightGray"
        Title="Login" Height="600" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="*"/>
           
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        
        <local:Header Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <Label Content="Log in Page" FontSize="40" HorizontalAlignment="Center" Grid.Row="0" Margin="0,10,0,20"/>

            <Label Content="Registration Number:" FontSize="20" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox Name="RegNoInput" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="211" Height="42" Grid.Row="1" HorizontalAlignment="Left" TextChanged="RegNoInput_TextChanged" Margin="250,5,0,5"/>

            <Label Content="Password:" FontSize="20" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <PasswordBox Name="PasswordInput" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="211" Grid.Row="2" HorizontalAlignment="Left" Margin="250,5,0,0"/>

            <Button Content="Login" Width="150" Height="40" Background="LimeGreen" Grid.Row="3" HorizontalAlignment="Center" Margin="0,10,0,5" Click="LoginButton_Click"/>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Label Content="Don't have an account?" FontSize="15"/>
                <Button Content="Signup" Width="120" Height="32" Background="LimeGreen" Click="SignUpbutton"/>
            </StackPanel>
        </Grid>

       
        <local:Footer Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
