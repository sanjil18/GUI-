<Window x:Class="Gui_end.BookSeat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui_end"
        mc:Ignorable="d"
        Title="Book Seats" Height="300" Width="400">
    <Grid>
        <Label Content="Seat Number:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
        <TextBox Name="SeatNumberInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,30,0,0"/>

        <Label Content="Time Limit (Hours):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <ComboBox Name="HourInput" Width="60" Margin="170,200,170,66"/>
        <TextBox Name="TimeLimitInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,80,0,0"/>

        <Button Content="Book" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="50,150,0,0" Click="BookSeatUP" />
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="200,150,0,0" Click="Cancel" />
    </Grid>
</Window>