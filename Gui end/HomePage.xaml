<Window x:Class="Gui_end.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="600" Width="900">

    <Grid Margin="10">

        <!-- DataGrid -->
        <DataGrid Name="SeatDetailsGrid" Margin="10,50,10,200" AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionChanged="SeatDetailsGrid_SelectionChanged"/>

        <!-- Button Panel -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Book Seats" Click="Bookseat" Width="150" Height="40" Margin="10"/>
            <Button Content="Update Booking" Click="Update" Width="150" Height="40" Margin="10"/>
            <Button Content="Delete Booking" Click="Delete" Width="150" Height="40" Margin="10"/>
        </StackPanel>

    </Grid>
</Window>
