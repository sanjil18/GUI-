<Window x:Class="Gui_end.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:local="clr-namespace:Gui_end"
        Title="Home" Height="900" Width="900">

    <Grid Margin="10">
        <local:Header  HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        <Label Content="Booked Seats List" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,231,0,0"/>

        <!-- DataGrid for displaying seat bookings -->
        <DataGrid Name="SeatDetailsGrid" Margin="10,267,10,215" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionChanged="SeatDetailsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Seat No" Binding="{Binding seatsNo}" Width="100"/>
                <DataGridTextColumn Header="Time Limit" Binding="{Binding TimeLimit}" Width="100"/>
                <DataGridTextColumn Header="Student ID" Binding="{Binding StudentIdFORSMS}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Width="150" Height="40" Content="Log out " Margin="678,158,52,566" Click="Button_Click" />
        <Button Width="150" Height="40" Content=" Book Seat" Margin="54,571,676,153" Click="BookSeat"></Button>
        <Button Width="150" Height="40" Content="Delete Seat " Margin="651,565,79,159" Click="Delete" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.169"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <local:Footer HorizontalAlignment="Stretch" VerticalAlignment="Bottom"></local:Footer>
    </Grid>
</Window>
