<Window x:Class="Gui_end.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui_end"
        mc:Ignorable="d"
       Title="Home" Height="400" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Content="Book Seats" Width="150" Margin="10" Click="Button_Click" />
        </StackPanel>

        <DataGrid Name="SeatDetailsGrid" Margin="10,50,10,10" AutoGenerateColumns="True" IsReadOnly="True"/>
    </Grid>
</Window>
