<Window x:Class="Gui_end.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui_end"
        mc:Ignorable="d"
        Background="LightGray"
        Title="Signup" Height="600" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Centered Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <!-- Centered Column -->
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <local:Header Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        <!-- Centered SignUp Content -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                
            </Grid.RowDefinitions>

            <Label Content="Sign Up Page" FontSize="40" HorizontalAlignment="Center" Grid.Row="0" Margin="0,20,0,30"/>

            <Label Content="Registration Number:" FontSize="18" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox Name="SignupRegNoInput"  HorizontalContentAlignment="Center" Width="300" Height="36" HorizontalAlignment="Left"  RenderTransformOrigin="0.692,0.767" Margin="190,9,0,4" Grid.Row="1"/>

            <Label Content="Password:" FontSize="18" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <PasswordBox Name="SignupPasswordInput" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="300" Height="36" Grid.Row="2" HorizontalAlignment="Left" Margin="190,7,0,6"/>

            <Label Content="Confirm Password:" FontSize="18" Grid.Row="3" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <PasswordBox Name="SignupConfirmPasswordInput" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="300" Height="36" Grid.Row="3" HorizontalAlignment="Left" Margin="190,7,0,6"/>

            <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Signup" Background="LimeGreen" Width="120" Height="40" Click="SignUpButton" Margin="0,0,10,0"/>
                <Button Content="Cancel" Width="120" Background="LimeGreen" Height="40" Click="CancelButton"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <local:Footer Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
